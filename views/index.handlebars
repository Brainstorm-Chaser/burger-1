<div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">

        <img src="/assets/img/veggie-burger.jpg" style="width: 260px; height: auto;">

        <h1>Eat-Da-Burger!</h1>

    </div>
  </div>
</div>

<div class="container">
    <div class="row">
      <div class="col-md-5 col-md-offset-1 col-lg-4 col-lg-offset-2">

        <h3>Burgers yet to eat!</h3>

        <ul>
          {{#each burger}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
        </ul>

    </div>
    <div class="col-md-5 col-lg-4">

      <h3>Devoured burgers.</h3>

      <ul>
        {{#each burger}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>
</div>

<div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">

        <h3>Add a Burger</h3>
        <form class="create-form">

          <div class="form-group">
            <label for="bur">Burger Name:</label>
            <input type="text" id="bur" name="name">
          </div>

          <div class="form-group">
            {{!-- <p>Devoured?<br> --}}
              <input type="radio" name="devoured" id="devoured" value="1" checked> 
              <label for="devoured">Devoured</label>
              
              <input type="radio" name="devoured" id="notdevoured" value="0"> 
              <label for="notdevoured">Not devoured</label>
            {{!-- </p> --}}
          </div>

          <button type="submit" class="btn btn-lg btn-primary">Add Burger</button>
        </form>
        <br>
        
    </div>
  </div>
</div>